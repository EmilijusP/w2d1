@model AnagramViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">

    <h1 class="display-4">ANAGRAM SOLVER</h1>

    </br>

    @if (Model.SearchHistory.Any())
    {
        <div class="mb-3">
            <p class="text-secondary">
                Search history: <span class="text-secondary">@string.Join(", ", Model.SearchHistory)</span>
            </p>
           
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.LastSearch))
    {
        <p class="text-secondary">Last search: @Model.LastSearch</p>
    }

    </br>

    <form asp-controller="Home" asp-action="Index" asp-route-id="" method="get">
        <input type="text" name="id" placeholder="Enter your words"/>
        <button type="submit">Submit</button>
    </form>

    @{
        if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <h1>@Model.ErrorMessage</h1>
        }

        else if (Model.Anagrams.Any())
        {
            <h2>Anagrams for "@Model.Word"</h2>
        }
        else if (!string.IsNullOrEmpty(Model.Word) && !Model.Anagrams.Any())
        {
            <h2>No anagrams for "@Model.Word" were found.</h2>
        }
    }

    <ul>
        @foreach (var anagram in Model.Anagrams)
        {
            <li>@anagram</li>
        }
    </ul>

</div>
